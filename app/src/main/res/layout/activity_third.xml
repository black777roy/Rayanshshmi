            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/etSecond4"
                android:hint="Sec"
                android:inputType="number"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/etMilli4"
                android:hint="Ms"
                android:inputType="number"
                android:layout_width="0dp"
